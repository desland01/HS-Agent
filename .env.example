# Required: Anthropic API key for Claude
ANTHROPIC_API_KEY=sk-ant-xxx

# Server port (default: 3001)
PORT=3001

# Redis URL for persistent storage (optional - falls back to in-memory)
# Railway provides this automatically when you add a Redis plugin
REDIS_URL=redis://localhost:6379

# Facebook Messenger Integration (optional)
FB_PAGE_ACCESS_TOKEN=
FB_APP_SECRET=
FB_VERIFY_TOKEN=home-service-agent
FB_PAGE_ID=

# Orange Blossom Cabinets - PaintScout CRM
PAINTSCOUT_WEBHOOK_URL=
PAINTSCOUT_API_KEY=

# Grove Street Painting - GoHighLevel CRM
GHL_WEBHOOK_URL=https://services.leadconnectorhq.com/hooks/xxx/webhook-trigger/xxx
GHL_API_KEY=

# iMessage Integration via Cloud Mac
# Orange Blossom Cabinets
OB_IMESSAGE_ENDPOINT=https://mac-ob.yourdomain.com/api/send-imessage
OB_IMESSAGE_API_KEY=your-secret-api-key

# Webhook secret for inbound iMessage/status webhooks
IMESSAGE_WEBHOOK_SECRET=your-webhook-secret

# CORS Configuration (production only)
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Logging configuration
LOG_LEVEL=info
NODE_ENV=production
